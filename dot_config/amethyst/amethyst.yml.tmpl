{{- if .ui.amethyst.enabled -}}

disable-padding-on-builtin-display: false
window-margins: false
smart-window-margins: false
window-margin-size: 0
window-max-count: 0
window-minimum-height: 0
window-minimum-width: 0
floating: []
floating-is-blacklist: true
ignore-menu-bar: false
float-small-windows: true
mouse-follows-focus: false
focus-follows-mouse: false
mouse-swaps-windows: false
mouse-resizes-windows: false
enables-layout-hud: true
enables-layout-hud-on-space-change: true
use-canary-build: false
new-windows-to-main: false
follow-space-thrown-windows: true
window-resize-step: 5
screen-padding-left: 0
screen-padding-right: 0
screen-padding-top: 0
screen-padding-bottom: 0
restore-layouts-on-launch: true
debug-layout-info: false

layouts:
  - tall

mod1:
  - option
  - shift

mod2:
  - control
  - option
  - shift

shrink-main:
  mod: mod1
  key: h

expand-main:
  mod: mod1
  key: l

# increase window count in main pane
increase-main:
  mod: mod1
  key: ','

# decrease window count in main pane
decrease-main:
  mod: mod1
  key: '.'

focus-cw:
  mod: mod1
  key: j

focus-ccw:
  mod: mod1
  key: k

swap-cw:
  mod: mod2
  key: j

swap-ccw:
  mod: mod2
  key: k

throw-space-left:
  mod: mod2
  key: left

throw-space-right:
  mod: mod2
  key: right

toggle-float:
  mod: mod1
  key: t

toggle-tiling:
  mod: mod1
  key: t

reevaluate-windows:
  mod: mod1
  key: z

toggle-focus-follows-mouse:
  mod: mod2
  key: x

relaunch-amethyst:
  mod: mod2
  key: z

{{- end }}
