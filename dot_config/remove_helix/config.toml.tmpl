{{- if .helix.enabled -}}

theme = "catppuccin_{{ includeTemplate "catppuccin-flavor" . }}"

[editor]
cursorline = true
auto-save = true
bufferline = "multiple"
color-modes = true
insert-final-newline = false

[editor.soft-wrap]
enable = true

[editor.cursor-shape]
insert = "bar"
normal = "block"
select = "block"

[editor.file-picker]
hidden = false

[editor.whitespace.render]
tab = "all"

[editor.indent-guides]
render = true

{{- end }}
