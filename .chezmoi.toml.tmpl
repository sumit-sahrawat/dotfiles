lang.rust = {{ promptBoolOnce . "lang.rust" "(lang) rust" }}

ui.theme.dynamic.files = [
{{- if $git }}
	"~/.config/git/config",
{{- end }}

{{- if $kitty }}
	"~/.config/kitty/kitty.conf",
{{- end }}

{{- if $bat }}
	"~/.config/bat/config",
{{- end }}

{{- if $helix }}
	"~/.config/helix/config.toml",
{{- end }}
]
