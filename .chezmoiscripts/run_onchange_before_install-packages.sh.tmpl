#!/usr/bin/env bash

set -euo pipefail

if ! hash brew >/dev/null; then
	bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

{{- $brews := list }}
{{- $casks := list }}

{{- if .zsh.enabled }}
{{- $brews = concat $brews (list
	"fzf"
) }}
{{- end }}

{{- if .mouse.fix_scroll }}
{{- $casks = concat $casks (list
	"unnaturalscrollwheels"
) }}
{{- end }}

{{- if .git.enabled }}
{{- $brews = concat $brews (list
	"git"
	"gh"
	"direnv"
	"difftastic"
) }}
{{- end }}

{{- if .helix.enabled }}
{{- $brews = concat $brews (list
	"helix"
) }}
{{- end }}

{{- if .alacritty.enabled }}
{{- $casks = concat $casks (list
	"alacritty"
) }}
{{- end }}

{{- if .kitty.enabled }}
{{- $casks = concat $casks (list
	"kitty"
) }}
{{- end }}

{{- if and .terminal.enabled (not .terminal.font.pragmata) }}
{{- $casks = concat $casks (list
	"homebrew/cask-fonts/font-iosevka-ss08"
) }}
{{- end }}

{{- if .mpv.enabled }}
{{- $brews = concat $brews (list
	"mpv"
	"yt-dlp"
	"aria2"
) }}
{{- end }}

{{- if .bat.enabled }}
{{- $brews = concat $brews (list
	"bat"
) }}
{{- end }}

{{- if .eza.enabled }}
{{- $brews = concat $brews (list
	"eza"
) }}
{{- end }}

{{- if .ripgrep.enabled }}
{{- $brews = concat $brews (list
	"ripgrep"
) }}
{{- end }}

{{- if .fd.enabled }}
{{- $brews = concat $brews (list
	"fd"
) }}
{{- end }}

{{- if .sd.enabled }}
{{- $brews = concat $brews (list
	"sd"
) }}
{{- end }}

{{- if .bottom.enabled }}
{{- $brews = concat $brews (list
	"bottom"
) }}
{{- end }}

{{- if .duf.enabled }}
{{- $brews = concat $brews (list
	"duf"
) }}
{{- end }}

{{- if .bandwhich.enabled }}
{{- $brews = concat $brews (list
	"bandwhich"
) }}
{{- end }}

{{- if .dust.enabled }}
{{- $brews = concat $brews (list
	"dust"
) }}
{{- end }}

{{- if .procs.enabled }}
{{- $brews = concat $brews (list
	"procs"
) }}
{{- end }}

{{- if .rust.enabled }}
{{- $brews = concat $brews (list
	"rustup"
) }}
{{- end }}

{{- if .cpp.enabled }}
{{- $brews = concat $brews (list
	"llvm"
) }}
{{- end }}

{{- if .tokei.enabled }}
{{- $brews = concat $brews (list
	"tokei"
) }}
{{- end }}

{{- if .hyperfine.enabled }}
{{- $brews = concat $brews (list
	"hyperfine"
) }}
{{- end }}

{{- if .tealdeer.enabled }}
{{- $brews = concat $brews (list
	"tealdeer"
) }}
{{- end }}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{- range ($brews | sortAlpha | uniq) }}
brew "{{ . }}"
{{- end }}
{{- range ($casks | sortAlpha | uniq) }}
cask "{{ . }}"
{{- end }}
EOF
