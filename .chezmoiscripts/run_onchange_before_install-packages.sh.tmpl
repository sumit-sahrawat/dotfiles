#!/usr/bin/env bash

set -euo pipefail

if ! hash brew >/dev/null; then
	bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

{{- $brews := list }}
{{- $casks := list }}

{{- if .git.enabled }}
{{- $brews = concat $brews (list
	"git"
	"gh"
	"hut"
	"difftastic"
	"cocogitto"
) }}
{{- end }}

{{- if eq .ui.theme "auto" }}
{{- $brews = concat $brews (list
	"dark-mode"
) }}
{{- end }}

{{- if .helix.enabled }}
{{- $brews = concat $brews (list
	"helix"
) }}
{{- end }}

{{- if .alacritty.enabled }}
{{- $casks = concat $casks (list
	"alacritty"
) }}
{{- end }}

{{- if .bat.enabled }}
{{- $brews = concat $brews (list
	"bat"
) }}
{{- end }}

{{- if .eza.enabled }}
{{- $brews = concat $brews (list
	"eza"
) }}
{{- end }}

{{- if .ripgrep.enabled }}
{{- $brews = concat $brews (list
	"ripgrep"
) }}
{{- end }}

{{- if .fd.enabled }}
{{- $brews = concat $brews (list
	"fd"
) }}
{{- end }}

{{- if .sd.enabled }}
{{- $brews = concat $brews (list
	"sd"
) }}
{{- end }}

{{- if .duf.enabled }}
{{- $brews = concat $brews (list
	"duf"
) }}
{{- end }}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{- range ($brews | sortAlpha | uniq) }}
brew "{{ . }}"
{{- end }}
{{- range ($casks | sortAlpha | uniq) }}
cask "{{ . }}"
{{- end }}
EOF
